{
    "service_port": 5042,
    "model_path": "/home/ansible/models/whisper/podlodka-turbo",
    "language": "ru",
    "enable_history": true,
    "chunk_length_s": 28,
    "batch_size": 6,
    "max_new_tokens": 384,
    "temperature": 0.01,
    "return_timestamps": true,
    "audio_rate": 16000,
    "norm_level": "-0.55",
    "compand_params": "0.3,1 -90,-90,-70,-50,-40,-15,0,0 -7 0 0.15",
    "audio_speed_factor": 1.0,
    "file_validation": {
        "max_file_size_mb": 500,
        "allowed_extensions": [".wav", ".mp3", ".ogg", ".flac", ".m4a", ".oga"],
        "allowed_mime_types": ["audio/wav", "audio/mpeg", "audio/ogg", "audio/flac", "audio/mp4", "audio/x-m4a"]
    },
    "allowed_directories": [],
    "version": "1.0.0",
    "log_level": "DEBUG",
    "log_file": "logs/whisper_api.log",
    "request_logging": {
        "exclude_endpoints": ["/health", "/static"],
        "sensitive_headers": ["authorization", "cookie", "set-cookie", "proxy-authorization", "x-api-key"],
        "log_debug": true
    },
    "diarizer": {
        "speaker_diarization_model_name": "pyannote/speaker-diarization-3.1",
        "min_segment_duration": 0.5,
        "gap": 0.7,
        "pipeline_params": {
            "segmentation": {
                "min_duration_off": 0.7
            },
            "clustering": {
                "method": "centroid",
                "min_cluster_size": 5,
                "threshold": 0.98
            }
        },
        "overlap_threshold": 0.3,
        "max_distance": 3.0
    }
}

